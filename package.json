{
  "name": "preformer",
  "description": "Preformer is a react library for validation form's submissions",
  "version": "1.0.1",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.umd.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "npm run clean && tsc && vite build",
    "clean": "rimraf dist",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yup": "^1.0.2"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/yup": "^0.32.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "jsdom": "^21.1.1",
    "rimraf": "^4.4.1",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vitest": "^0.29.7"
  },
  "author": "puterphile@gmail.com",
  "bugs": {
    "url": "https://github.com/puterphile/preformer/issues"
  },
  "homepage": "https://github.com/puterphile/preformer#readme"
}
